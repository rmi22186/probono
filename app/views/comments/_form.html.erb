<%= form_for [mr, comment] do |f| %>
  <% if comment.errors.any? %>
    <div class="alert alert-block">
      <ul>
        <% comment.errors.full_message.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= control_group_tag(comment.errors[:comment]) do %>
    <%= f.text_area :comment, class: "form-control" %>
  <% end %>
  <%= f.submit "Add Comment", class: 'btn btn-primary btn-xs', style: 'margin-top: 10px'  %>
<% end %>